-@title= 'Login - Bulutfon MVP | yangying'
-@page_classes= 'page-login'

.page-login-layout{'data-ng-controller':'LoginCtrl'}
  .container
    .row
      .col-lg-4.col-lg-offset-4.col-xs-12
        .panel.panel-login
          .panel-body
            =image_tag (lorem.image('170x170')), class:'center-block img-circle'
            %form
              .form-group
                %label{for:'inputEmail'}
                  Email address
                %input#inputEmail.form-control{placeholder:'Email', type:'email'}
              .form-group
                %label{for:'inputPassword'}
                  Password
                %input#inputPassword.form-control{placeholder:'Password', type:'password'}
              %button.btn.btn-primary.btn-lg.btn-block{type:'submit'} Submit
              .checkbox.pull-left
                %label
                  %input{type:'checkbox'}
                  Remember me
              =link_to '#', class:'pull-right btn btn-link' do
                Need Help?
        =link_to '#', class:'center-block btn btn-link' do
          Create an account
